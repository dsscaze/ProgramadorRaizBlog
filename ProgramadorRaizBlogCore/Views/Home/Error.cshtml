@model ErrorViewModel
@{
    ViewData["Title"] = "Erro";
}

<h1 class="text-danger">Erro.</h1>
<h2 class="text-danger">Ocorreu um erro ao processar sua solicitação.</h2>

@if (Model != null && Model.ShowRequestId)
{
    <p>
        <strong>ID da Solicitação:</strong> <code>@Model.RequestId</code>
    </p>
}

<h3>Sugestões:</h3>
<ul>
    <li>Tente novamente mais tarde</li>
    <li>Verifique a URL digitada</li>
    <li>Entre em contato conosco se o problema persistir</li>
</ul>
